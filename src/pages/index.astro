import CourseCard from '../components/CourseCard.astro';
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Quicksand:wght@300&display=swap" rel="stylesheet">
		<title>Ayman Islam</title>
	</head>
	<body class="bg-white">
		<NavBar />
		<div id="home" class="flex items-center justify-center h-[40rem]">
			<div class="max-w-[40rem] px-10">
				<div class="text-blue-400 text-xl font-bold">
					Hi there, my name is
				</div>
				<div class="text-6xl font-bold">
					Ayman Islam
				</div>
				<div class="text-blue-400 text-3xl font-bold">
					Electrical Engineering Student
				</div>
				<div>
					I'm a Computer Engineering student at Memorial University of Newfoundland with strong interest and understanding of Full-Stack and Mobile Development.<br> Previously, I've worked as a Full-Stack Developer at Bluedrop ISM and done contract work for local organizations and research groups. I have skills in Dart (Flutter), C++, C#, Java, JavaScript (ReactJS, AngularJS, and NodeJS), Python and SQL (PostgreSQL).
				</div>
			</div>
		</div>
		<div id="who" class="flex justify-center bg-gray-300">
			<div class="flex flex-col items-center py-10">
				<div class="text-2xl font-bold">Who Am I?</div>
				<hr class="w-16 h-1 my-4 border-0 bg-gray-700">
				<div class="relative mx-auto rounded-lg overflow-hidden">
					<!-- <Image height={256} src={profile} alt="Profile" /> -->
				</div>
				<div class="pt-4 px-5">
					<div class="text-blue-400 font-bold md:text-lg text-md">Bachelor of Engineering - Electrical Engineering</div>
					<div class="text-blue-600 font-bold md:text-sm text-xs">GPA: 3.8/4.0</div>
					<ul class="list-disc list-inside font-bold md:text-md text-sm">
						<li>Academic Term 6 Student</li>
						<li>Team Lead & Electrical Designer for Paradigm Engineering</li>
						<li>Power Subteam Member for MUNStar-1</li>
						<li>Student Advisor for Memorial University Student Design Hub</li>
					</ul>
				</div>
			</div>
		</div>
		<div id="experience" class="flex justify-center bg-white">
			<div class="flex flex-col items-center py-10">
				<div class="text-2xl font-bold">Experience & Projects</div>
				<hr class="w-16 h-1 my-4 border-0 bg-gray-500">
				<div class="grid md:grid-cols-2 gap-20 px-20 xl:px-[20%]">
					<ExperienceCard link="https://www.solace.ca/" title="Solace Power - Hardware, Integration, and Testing" desc="I have experience in designing, populating, testing, and debugging PCBs for wireless power transfer systems. This includes creating LC filters to reduce RF noise using Altium Designer and LTSpice, and designing current sense PCBs for overcurrent protection. I use oscilloscopes, EMI analyzers, VNAs, and impedance analyzers to enhance system efficiency. My expertise ensures robust, efficient, and reliable systems, meeting high performance and safety standards through continuous testing and debugging." date="April 2024 - present">
						<SkillTag skill="JavaScript"/>
						<SkillTag skill="TypeScript"/>
						<SkillTag skill="NodeJS"/>
						<SkillTag skill="REST APIs"/>
						<SkillTag skill="ReactJS"/>
						<SkillTag skill="AngularJS"/>
						<SkillTag skill="PostgreSQL"/>
						<SkillTag skill="Unit-Testing"/>
						<SkillTag skill="Jira"/>
						<SkillTag skill="GitHub"/>
						<SkillTag skill="Agile Development"/>
					</ExperienceCard>
				</div>
			</div>
		</div>
		<Footer />	
	</body>
</html>
