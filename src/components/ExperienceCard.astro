---
interface Props {
	image?: ImageMetadata;
	title: string;
	desc: string;
	date?: string;
	link?: string;
}

const { image, title, desc, date, link } = Astro.props;

import { Image } from 'astro:assets';

---
<div class="max-w-[80rem]">
	{image ? <Image height={512} src={image} alt="experience" /> : null}
	<a href={link} class="text-blue-400 font-bold text-lg pt-2">{title}</a>
	<div class="text-gray-400 text-sm">{date}</div>
	<div>{desc}</div>
	<div class="flex flex-wrap pt-2">
		<slot />
	</div>
</div>