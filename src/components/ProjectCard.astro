---
interface Props {
	images?: ImageMetadata[];
	title: string;
	desc: string;
	date?: string;
	link?: string;
}

const { images, title, desc, date, link } = Astro.props;

import { Image } from 'astro:assets';

---
<div class="max-w-[80rem]">
	<a href={link} class="text-blue-400 font-bold text-2xl pt-2">{title}</a>
	<div class="text-gray-400 text-sm">{date}</div>
	<div class="list-disc" set:html={desc}></div>
	<div class="grid grid-flow-col auto-col-max gap-3 pt-5 justify-center items-center">{images ? images.map((image: ImageMetadata) => <Image height={512} src={image} alt='experience' width={512} crossorigin="" />) : null}</div>
</div>